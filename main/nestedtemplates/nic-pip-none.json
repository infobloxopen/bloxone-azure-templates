{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "enableIPForwarding": {
      "type": "bool"
    },
    "location": {
      "type": "string"
    },
    "nicName": {
      "type": "string"
    },
    "subnetId": {
      "type": "string"
    },
    "networkSecurityGroupId": {
      "type": "string"
    },
    "enableAcceleratedNetworking": {
      "type": "bool"
    },
    "deleteNICWithVM": {
      "type": "bool"
    },
    "tagsByResource": {
      "type": "object",
      "defaultValue": {}
    }
  },
  "resources": [
    {
      "type": "Microsoft.Network/networkInterfaces",
      "apiVersion": "2023-06-01",
      "name": "[parameters('nicName')]",
      "location": "[parameters('location')]",
      "tags": "[ if(contains(parameters('tagsByResource'), 'Microsoft.Network/publicIPAddresses'), parameters('tagsByResource')['Microsoft.Network/publicIPAddresses'], json('{}')) ]",
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "primary": true,
              "privateIPAllocationMethod": "Dynamic",
              "privateIPAddressVersion": "IPv4",
              "subnet": {
                "id": "[parameters('subnetId')]"
              }
            }
          }
        ],
        "enableIPForwarding": "[parameters('enableIPForwarding')]",
        "networkSecurityGroup": {
          "id": "[parameters('networkSecurityGroupId')]"
        },
        "enableAcceleratedNetworking": "[parameters('enableAcceleratedNetworking')]"
      },
      "dependsOn": "[resourceId('Microsoft.Network/publicIPAddresses', parameters('publicIpAddressName'))]"
    }
  ],
  "outputs": {}
}
